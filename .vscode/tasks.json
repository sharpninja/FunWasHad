{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/FunWasHad.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/FunWasHad.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/FunWasHad.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-android",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/FWH.Mobile/FWH.Mobile.Android/FWH.Mobile.Android.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-android",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/FWH.Mobile/FWH.Mobile.Android/FWH.Mobile.Android.csproj",
                "-t:Run",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            }
        },
        {
            "label": "android-logs-monitor",
            "command": "adb",
            "type": "process",
            "args": [
                "logcat",
                "*:E",
                "*:W",
                "FunWasHad:*",
                "dotnet:*",
                "mono:*",
                "MonoDroid:*"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "android-logs-clear",
            "command": "adb",
            "type": "process",
            "args": [
                "logcat",
                "-c"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "android-logs-recent",
            "command": "powershell",
            "type": "process",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "adb logcat -d -t 200 | Select-String -Pattern 'app\\.funwashad|FunWasHad|dotnet|Exception|Error|Fatal|Warning' -CaseSensitive:`$false | Select-Object -Last 50"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            }
        },
        {
            "label": "android-anr-diagnose",
            "command": "powershell",
            "type": "process",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/Diagnose-AndroidANR.ps1",
                "-CopyToClipboard"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            }
        },
        {
            "label": "android-anr-capture-bugreport",
            "command": "powershell",
            "type": "process",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/Diagnose-AndroidANR.ps1",
                "-CaptureBugreport",
                "-CopyToClipboard"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            }
        },
        {
            "label": "doc-sync",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/FWH.Documentation.Sync/FWH.Documentation.Sync.csproj",
                "--",
                "sync"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "doc-sync-watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/FWH.Documentation.Sync/FWH.Documentation.Sync.csproj",
                "--",
                "watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            }
        },
        {
            "label": "compile: fwh-cli-agent",
            "command": "npm",
            "type": "process",
            "args": ["run", "compile"],
            "options": { "cwd": "${workspaceFolder}/extensions/fwh-cli-agent" },
            "problemMatcher": "$tsc",
            "group": "build"
        }
    ]
}