<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <!-- Target Windows specifically to enable Windows Runtime APIs -->
    <TargetFramework>net9.0-windows10.0.19041.0</TargetFramework>
    <Nullable>enable</Nullable>
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
    <!-- Enable Windows Runtime support -->
    <EnableDefaultCompileItems>true</EnableDefaultCompileItems>
  </PropertyGroup>

  <!-- Staging configuration: based on Debug (unoptimized, with debug symbols) -->
  <PropertyGroup Condition="'$(Configuration)' == 'Staging'">
    <Optimize>false</Optimize>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" />
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Include="Avalonia.Diagnostics" >
      <IncludeAssets Condition="'$(Configuration)' != 'Debug' and '$(Configuration)' != 'Staging'">None</IncludeAssets>
      <PrivateAssets Condition="'$(Configuration)' != 'Debug' and '$(Configuration)' != 'Staging'">All</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  
  <!-- Windows SDK reference - use FrameworkReference instead of PackageReference for better compatibility -->
  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net6.0-windows'))">
    <FrameworkReference Include="Microsoft.Windows.SDK.NET.Ref" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FWH.Mobile\FWH.Mobile.csproj" />
    <ProjectReference Include="..\..\FWH.Common.Location\FWH.Common.Location.csproj" />
  </ItemGroup>
</Project>
