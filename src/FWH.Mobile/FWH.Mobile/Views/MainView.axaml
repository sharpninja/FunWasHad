<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mobile="using:FWH.Mobile"
             xmlns:views="using:FWH.Mobile.Views"
             xmlns:vm="clr-namespace:FWH.Common.Chat.ViewModels;assembly=FWH.Common.Chat"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FWH.Mobile.Views.MainView"
             x:DataType="vm:ChatViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
        to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:ChatViewModel />
    </Design.DataContext>

    <DockPanel>
        <views:LogViewerControl DockPanel.Dock="Bottom" Height="200" Name="LogViewer" />
        <mobile:ChatInputControl DockPanel.Dock="Bottom" />
        <mobile:ChatListControl />
    </DockPanel>
</UserControl>
