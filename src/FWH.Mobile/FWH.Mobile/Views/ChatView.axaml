<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mobile="using:FWH.Mobile"
             xmlns:views="using:FWH.Mobile.Views"
             xmlns:vm="clr-namespace:FWH.Common.Chat.ViewModels;assembly=FWH.Common.Chat"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FWH.Mobile.Views.ChatView"
             x:DataType="vm:ChatViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <mobile:ChatListControl Grid.Row="0" DataContext="{Binding ChatList}" />
        <mobile:ChatInputControl Grid.Row="1" DataContext="{Binding ChatInput}" />
    </Grid>
</UserControl>
