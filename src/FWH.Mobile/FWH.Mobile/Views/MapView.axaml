<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:FWH.Mobile.Views"
             xmlns:mapsui="using:Mapsui.UI.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FWH.Mobile.Views.MapView">
    <Grid RowSpacing="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:MovementStateControl Grid.Row="0" Name="MovementState" />

        <Border Grid.Row="1"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Background="#FFFFFF">
            <Grid>
                <mapsui:MapControl x:Name="LocationMap"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                
                <!-- Snap to Location Button -->
                <Button x:Name="SnapToLocationButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="12"
                        Padding="12"
                        MinWidth="48"
                        MinHeight="48"
                        ToolTip.Tip="Center map on current location"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Click="OnSnapToLocationClick">
                    <!-- Target-style icon: solid disc with concentric ring (similar to Google Maps) -->
                    <Grid Width="24" Height="24">
                        <!-- Outer ring -->
                        <Ellipse Stroke="#0078D7"
                                 StrokeThickness="2"
                                 Fill="Transparent" />
                        <!-- Inner solid disc -->
                        <Ellipse Width="10"
                                 Height="10"
                                 Fill="#0078D7"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Grid>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
