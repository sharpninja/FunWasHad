<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0-android</TargetFramework>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <Nullable>enable</Nullable>
    <ApplicationId>com.CompanyName.FWH.Mobile</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <AndroidPackageFormat>apk</AndroidPackageFormat>
    <AndroidEnableProfiledAot>false</AndroidEnableProfiledAot>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>$(DefineConstants);ANDROID</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>$(DefineConstants);ANDROID</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <AndroidResource Include="Icon.png">
      <Link>Resources\drawable\Icon.png</Link>
    </AndroidResource>
  </ItemGroup>

  <ItemGroup>
    <!-- Include workflow.puml as Android Asset for runtime access -->
    <AndroidAsset Include="..\..\..\workflow.puml">
      <Link>Assets\workflow.puml</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </AndroidAsset>
  </ItemGroup>

  <ItemGroup>
    <AndroidAsset Include="..\FWH.Mobile\appsettings.json" Link="appsettings.json" />
  </ItemGroup>

  <!-- MSBuild target to detect host IP and process config for DEBUG builds -->
  <Target Name="DetectHostIpAddress" BeforeTargets="BeforeBuild" Condition="'$(Configuration)' == 'Debug'">
    <Exec Command="powershell -NoProfile -ExecutionPolicy Bypass -File &quot;$(ProjectDir)DetectHostIp.ps1&quot; &quot;$(ProjectDir)&quot;" 
          ConsoleToMSBuild="true"
          IgnoreExitCode="false" />
  </Target>
  
  <!-- Use the processed config file for Android assets in DEBUG builds -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug' and Exists('obj\appsettings.Development.processed.json')">
    <AndroidAsset Include="obj\appsettings.Development.processed.json">
      <Link>appsettings.Development.json</Link>
    </AndroidAsset>
  </ItemGroup>
  
  <!-- Fallback to original file if processed doesn't exist -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug' and !Exists('obj\appsettings.Development.processed.json')">
    <AndroidAsset Include="..\FWH.Mobile\appsettings.Development.json" Link="appsettings.Development.json" />
  </ItemGroup>
  
  <!-- In Release, always use original (with placeholder/default) -->
  <ItemGroup Condition="'$(Configuration)' != 'Debug'">
    <AndroidAsset Include="..\FWH.Mobile\appsettings.Development.json" Link="appsettings.Development.json" />
  </ItemGroup>

  <!-- Clean up processed config files -->
  <Target Name="CleanProcessedConfigs" AfterTargets="Clean">
    <Delete Files="$(ProjectDir)obj\appsettings.Development.processed.json" ContinueOnError="true" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Avalonia.Android" />
    <PackageReference Include="Xamarin.AndroidX.Core.SplashScreen" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FWH.Mobile\FWH.Mobile.csproj" />
  </ItemGroup>
</Project>
