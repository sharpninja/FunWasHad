{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "marketing": "Host=${POSTGRES_HOST:localhost};Port=${POSTGRES_PORT:5432};Database=${POSTGRES_DATABASE:marketing};Username=${POSTGRES_USER:postgres};Password=${POSTGRES_PASSWORD:postgres}"
  },
  "ApiSecurity": {
    "ApiKey": "dev-api-key-change-in-production",
    "ApiSecret": "dev-api-secret-change-in-production",
    "RequireAuthentication": false
  },
  "BlobStorage": {
    "Provider": "LocalFile",
    "LocalPath": "./uploads",
    "BaseUrl": "/uploads"
  }
}
